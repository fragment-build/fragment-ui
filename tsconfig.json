{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "src",
    "target": "es6",
    "module": "es6",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
  }
}